@startuml Context
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title Интернет-магазин - Контекстная диаграмма

Person(customer, "Покупатель", "Ищет товары, оформляет заказы, оставляет отзывы")
Person(seller, "Продавец", "Управляет товарами, обрабатывает заказы, анализирует продажи")
Person(admin, "Администратор", "Управляет рекомендациями, обрабатывает жалобы и возвраты")
Person(sysadmin, "Системный администратор", "Обеспечивает работу системы, выполняет резервное копирование")

System(esystem, "Интернет-магазин", "Платформа электронной коммерции: поиск, фильтрация, рекомендации, оформление заказов, управление товарами, отзывы и оценки")

System_Ext(payment_gateway, "Платёжная система", "Внешняя система обработки онлайн-платежей и возвратов")
System_Ext(delivery_service, "Служба доставки", "Внешний сервис логистики и отслеживания доставки")
System_Ext(notification_service, "Система уведомлений", "Внешний сервис отправки email, SMS и push-уведомлений")

Rel(customer, esystem, "Поиск и фильтрация товаров, просмотр рекомендаций, оформление заказов, просмотр истории, отзывы", "HTTPS")
Rel(seller, esystem, "Добавление и редактирование товаров, управление заказами, просмотр аналитики продаж", "HTTPS")
Rel(admin, esystem, "Настройка алгоритмов рекомендаций, обработка жалоб и возвратов, модерация", "HTTPS")
Rel(sysadmin, esystem, "Администрирование системы, резервное копирование, мониторинг", "HTTPS")

Rel(esystem, payment_gateway, "Проведение платежей, обработка возвратов", "API/HTTPS")
Rel(esystem, delivery_service, "Передача информации о заказах, получение статусов доставки", "API/HTTPS")
Rel(esystem, notification_service, "Отправка уведомлений о статусе заказа, регистрации, изменениях", "API/HTTPS")

@enduml
